declare VBOXSH=$(readlink -m $(type -p "${0}"))
declare -a VBOXSH_CMDS_LIST=()

VBOXSH_CMDS_LIST+=(help)
VBOXSH_CMDS_LIST+=(vm-control)
VBOXSH_CMDS_LIST+=(vm-control-poweroff vm-control-reboot vm-control-shutdown)
VBOXSH_CMDS_LIST+=(vm-create)
VBOXSH_CMDS_LIST+=(vm-show)
VBOXSH_CMDS_LIST+=(vm-start vm-stop)

declare VBOXSH_CMDS="${VBOXSH_CMDS_LIST[@]}"

##############################################################################

load-library () {
    if test "$1" = --dump; then
        declare -f $VBOXSH_CMDS
        declare -f fail
        echo VBOXSH=\""$VBOXSH"\"
        echo VBOXSH_CMDS=\""$VBOXSH_CMDS"\"
    else
        export -f $VBOXSH_CMDS
        export -f fail
        export VBOXSH VBOXSH_CMDS
    fi
}

##############################################################################

# Usage: help [<command>]
# display available commands or show help for a command
help () {
    local cmd

    if test $# -eq 0; then
        echo "help <command>"
        echo "where command is one of:"
        echo
        # TODO: verify this [@] is needed
        for cmd in ${VBOXSH_CMDS[@]}; do
            echo $cmd
        done | column
    else
        grep -B2 ^"$1"\\b < "$VBOXSH" | head -n2 | cut -f2- -d" "
    fi
}

fail () {
    echo "$1" >&2
    return ${2:-1}
}

##############################################################################

# Usage: vm-create [-r] <name>
# create and optionally register a VM
vm-create () {
    local opts=

    if test "$1" = -r; then
        opts="$opts --register"
        shift
    fi

    VBoxManage createvm --name "$1" $opts
}

# Usage: vm-control <vm> <cmd> [<options>]
# issue a control cmd to a VM by its name or GUID and the cmd name
vm-control () {
    local vm="$1"
    local fn=vm-control-"$2"
    shift 2

    "$fn" "$vm" "$@"
}

# Usage: vm-control-poweroff <vm>
# issue power off cmd to a VM by its name or GUID
vm-control-poweroff () {
    VBoxManage controlvm "$1" poweroff
}

# Usage: vm-control-reboot <vm>
# issue reboot cmd to a VM by its name or GUID
vm-control-reboot () {
    VBoxManage controlvm "$1" reboot
}

# Usage: vm-control-shutdown [-f] <vm>
# issue shutdown cmd to a VM by its name or GUID
vm-control-shutdown () {
    local opts=

    if test "$1" = -f; then
        opts=--force
        shift
    fi

    VBoxManage controlvm "$1" shutdown $opts
}

# Usage: vm-show <vm>
# display info about a VM by its name or GUID
vm-show () {
    VBoxManage showvminfo "$1"
}

# Usage: vm-start <vm>
# start a VM by its name or GUID
vm-start () {
    VBoxManage startvm "$1"
}

# Usage: vm-stop <vm>
# alias for vm-poweroff
vm-stop () {
    poweroff "$1"
}

##############################################################################

if test "$1" == --lib; then
    load-library --dump
else
    load-library --export
    PS1='\[\033[01;31m\]VBox\[\033[00m\]$ ' bash --noprofile --norc
fi
